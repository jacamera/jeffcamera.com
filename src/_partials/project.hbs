<div class="project">
    <img class="logo" src="{{asset image}}" alt="{{name}} Logo" />
    {{# website}}
    <a class="name" href="{{.}}" title="Website">{{../name}}</a>
    {{/ website}}
    {{^ website}}
    <span class="name">{{name}}</span>
    {{/ website}}
    <small class="description">{{description}}</small>
    {{# stores}}
    <div class="stores">
        <span class="stars" title="{{rating}} {{pluralize "star" rating}}">
            {{# stars}}
            <svg class="star" width="32" height="32">
                {{# partial}}
                <defs>
                    <linearGradient id="{{id}}">
                        <stop offset="{{percent}}%" stop-color="var(--star-active)"></stop>
                        <stop offset="{{percent}}%" stop-color="var(--star-inactive)"></stop>
                    </linearGradient>
                </defs>
                <use href="#icon-star" fill="url(#{{id}})"></use>
                {{/ partial}}
                {{^ partial}}
                {{# if isFull}}
                <use href="#icon-star" fill="var(--star-active)"></use>
                {{else}}
                <use href="#icon-star" fill="var(--star-inactive)"></use>
                {{/ if}}
                {{/ partial}}
            </svg>
            {{/ stars}}
        </span>
        <span class="reviews">{{reviewCount}}<span class="text"> {{pluralize "review" reviewCount}}</span></span>
        <span class="links">
            {{# links}}
            {{# apple}}
            <a href="{{url}}" title="App Store">
                <img src="{{asset "/images/projects/apple.svg"}}" alt="Apple Logo" />
                <span>{{list platforms}}</span>
            </a>
            {{/ apple}}
            {{# chrome}}
            <a href="{{.}}" title="Chrome Extension">
                <img src="{{asset "/images/projects/chrome.svg"}}" alt="Chrome Logo" />
                <span>Chrome</span>
            </a>
            {{/ chrome}}
            {{# firefox}}
            <a href="{{.}}" title="Firefox Add-on">
                <img src="{{asset "/images/projects/firefox.svg"}}" alt="Firefox Logo" />
                <span>Firefox</span>
            </a>
            {{/ firefox}}
            {{# safari}}
            <a href="{{.}}" title="Safari Extension">
                <img src="{{asset "/images/projects/safari.svg"}}" alt="Safari Logo" />
                <span>Safari</span>
            </a>
            {{/ safari}}
            {{# edge}}
            <a href="{{.}}" title="Edge Add-on">
                <img src="{{asset "/images/projects/edge.svg"}}" alt="Edge Logo" />
                <span>Edge</span>
            </a>
            {{/ edge}}
            {{/ links}}
        </span>
    </div>
    {{/ stores}}
    {{# github}}
    <div class="source">
        <a href="{{.}}" title="Source Code">{{trim-start . "https://"}}</a>
    </div>
    {{/ github}}
</div>
